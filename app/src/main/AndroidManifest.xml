<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="by.tomal.sw.pockethandbook">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme"
                 android:name=".app.SWPocketHandbookApplication">
        <activity
                android:name=".presentation.ui.PocketbookMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.monster.info.MonsterInfoActivity"></activity>
        <activity android:name=".presentation.ui.monster.guide.MonsterGuideActivity"></activity>
    </application>
</manifest>
